  doctype html
  html(lang='en')
    head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      title Procured Produce
      link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
    body
      .container
        h1 Procured Produce
        form#procurementForm(action='/procurement/addProduct' method='post')
          .form-group.mb-3
            label.form-label(for='produceName') Produce Name
            select#produceName.form-control( name='producename')
              option(selected='') Select Produce
              option(value='beans') Beans
              option(value='grains') Grains
              option(value='maize') Maize
              option(value='cowpeas') Cow peas 
              option(value='soybeans') Soy Beans 
              option(value='gnuts') G-nuts
              
          
          .form-group.mb-3
            label.form-label(for='produceType') Type of Produce
            select#produceType.form-control( name='typeofproduce')
              option(selected='') Select Type of Produce
              option(value='legumes') Legumes
              option(value='cereals') Cereals
          
          .form-group.mb-3
            label.form-label(for='dateTime') Date &amp; Time
            input#dateTime.form-control(type='datetime-local'  name='dateandtime')
          
          .form-group.mb-3
            label.form-label(for='tonnage') Tonnage (in kgs)
            input#tonnage.form-control(type='number' min='1' name='tonnage' )
          
          .form-group.mb-3
            label.form-label(for='cost') Cost (in UgX)
            input#cost.form-control(type='number' min='1' name='cost')
          
          .form-group.mb-3
            label.form-label(for='dealerName') Dealer's Name
            input#dealerName.form-control(type='text' name='dealername')
          
          .form-group.mb-3
            label.form-label(for='branchName') Branch Name
            select#branchName.form-control( name='branch')
              option(selected='') Select Branch
              option(value='maganjo') Maganjo
              option(value='matuga') Matuga
              option(value='dealer') Dealer
          
          .form-group.mb-3
            label.form-label(for='contact') Contact (Valid Phone Number)
            input#contact.form-control(type='text' name='contact')
            small.form-text.text-muted Enter a 10-digit valid phone number.
          
          .form-group.mb-3
            label.form-label(for='priceToSell') Price to be Sold At
            input#priceToSell.form-control(type='number' min='1' name='pricesold')
          
          button.btn.btn-primary(type='submit') Submit

        
            
      script(src='procurement.js')
      script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')