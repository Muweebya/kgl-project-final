doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Update Sale
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet')
h1 Update Sale
.container
form#sales-form(action='/sales/updateSale?id='+sale._id method='post' onsubmit='return formValidate()')
    .mb-3
      label.form-label(for='produceName') Produce Name
      input#produceName.form-control(  name='producename' value=sale.producename)
    .mb-3
      label.form-label(for='produceType') Buyer&apos;s Name
      input.form-control(type='text' id="buyer'sName"  name='buyersname' value=sale.buyersname)
    .mb-3
      label.form-label(for='dateTime') Date &amp; Time
      input#dateTime.form-control(type='datetime-local'  name='dateandtime' value=sale.dateandtime)
    .mb-3
      label.form-label(for='tonnage') Tonnage (in kgs)
      input#tonnage.form-control(type='number' min='1'  name='tonnage' value=sale.tonnage)
    .mb-3
      label.form-label(for='cost') Amount Paid (in UgX)
      input#cost.form-control(type='number' min='1'  name='amountpaid' value=sale.amountpaid)
    .mb-3
      label.form-label(for='dealerName') Sales Agent&apos;s Name
      input#salesAgentName.form-control(type='text'  name='salesagent' value=sale.salesagent)
    .mb-3
      label.form-label(for='paymentMethod') Payment Method
      input#paymentMethod.form-control(type='text'  name='paymentmethod' value=sale.paymentmethod)
    button.btn.btn-primary(type='submit') Submit
 
script(src='sales.js')