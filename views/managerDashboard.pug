doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Manager Dashboard
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand(href='/managerDash') Manager Dashboard
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/procurement/procuredProduceList') Procured Produce
            li.nav-item
              a.nav-link(href='/sales/salesList') Sales
            li.nav-item
              a.nav-link(href='/credit/creditorsList') Creditors
            li.nav-item
              a.nav-link(href='/logout') Logout
    
    .container.mt-4
      h1.mb-4 Manager Dashboard
      .row
        .col-md-6.col-lg-4.mb-4
          .card
            .card-body
              h5.card-title Procurement
              p.card-text Manage procurement operations
              a.btn.btn-primary(href='/procurement/addProduct') Add Product
              a.btn.btn-secondary.ms-2(href='/procurement/procuredProduceList') View All
        
        .col-md-6.col-lg-4.mb-4
          .card
            .card-body
              h5.card-title Sales
              p.card-text Manage sales operations
              a.btn.btn-primary(href='/sales/addSale') Add Sale
              a.btn.btn-secondary.ms-2(href='/sales/salesList') View All
        
        .col-md-6.col-lg-4.mb-4
          .card
            .card-body
              h5.card-title Credit
              p.card-text Manage credit customers
              a.btn.btn-primary(href='/credit/addCreditor') Add Creditor
              a.btn.btn-secondary.ms-2(href='/credit/creditorsList') View All
    
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')