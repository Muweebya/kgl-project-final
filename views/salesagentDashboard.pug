// salesagentDashboard.pug
doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Sales Agent Dashboard
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand(href='/salesagentDash') Sales Agent Dashboard
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            
            li.nav-item
              a.nav-link(href='/sales/salesList') My Sales
            li.nav-item
              a.nav-link(href='/credit/creditorsList') My Creditors
            li.nav-item
              a.nav-link(href='/logout') Logout
    
    .container.mt-4
      h1.mb-4 Sales Agent Dashboard
      .row
        .col-md-6.mb-4
          .card
            .card-body
              h5.card-title Record Sales
              p.card-text Record new sales transactions
              a.btn.btn-primary(href='/sales/addSale') Add Sale
              a.btn.btn-secondary.ms-2(href='/sales/salesList') View All Sales
        
        .col-md-6.mb-4
          .card
            .card-body
              h5.card-title Record Creditors
              p.card-text Record new credit customers
              a.btn.btn-primary(href='/credit/addCreditor') Add Creditor
              a.btn.btn-secondary.ms-2(href='/credit/creditorsList') View All Creditors
    
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
