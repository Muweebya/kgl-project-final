doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Director Dashboard
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand(href='/directorDash') Director Dashboard
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/usersList') Users
            li.nav-item
              a.nav-link(href='/procurement/procuredProduceList') Procurement
            li.nav-item
              a.nav-link(href='/sales/salesList') Sales
            li.nav-item
              a.nav-link(href='/credit/creditorsList') Credit
            li.nav-item
              a.nav-link(href='/logout') Logout
    
    .container.mt-4
      h1.mb-4 Director Dashboard
      .row
        .col-md-6.col-lg-3.mb-4
          .card.text-white.bg-primary
            .card-body
              h5.card-title Users
              p.card-text #{usersCount || 0} Users
              a.btn.btn-light(href='/usersList') View All
        
        .col-md-6.col-lg-3.mb-4
          .card.text-white.bg-success
            .card-body
              h5.card-title Procurement
              p.card-text #{procureCount || 0} Products
              a.btn.btn-light(href='/procurement/procuredProduceList') View All
        
        .col-md-6.col-lg-3.mb-4
          .card.text-white.bg-info
            .card-body
              h5.card-title Sales
              p.card-text #{salesCount || 0} Sales
              a.btn.btn-light(href='/sales/salesList') View All
        
        .col-md-6.col-lg-3.mb-4
          .card.text-white.bg-warning
            .card-body
              h5.card-title Credit
              p.card-text #{creditCount || 0} Creditors
              a.btn.btn-light(href='/credit/creditorsList') View All
      
      .row.mt-4
        .col-12
          .card.mb-4
            .card-header
              h5 System Management
            .card-body
              .row
                .col-md-4
                  a.btn.btn-outline-primary.w-100.mb-2(href='/register') Register New User
                .col-md-4
                  a.btn.btn-outline-success.w-100.mb-2(href='/procurement/addProduct') Add New Product
                
    
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')