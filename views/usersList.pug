doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Users List
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
h1 Users List
table#userTable.table.table-striped.table-hover.border.1
  thead
    tr
      th(scope='col') Name
      th(scope='col') Role
      th(scope='col') Branch
      th(scope='col') Email Address
      th(scope='col') Password 
  tbody
    if users.length 
        each user in users
        tr
        td#{user.emailaddress}
        td#{user.name}
        td#{user.role}
        td#{user.branch}
     