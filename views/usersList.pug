doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Users List
    link(
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css',
      rel='stylesheet',
      integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH',
      crossorigin='anonymous'
    )
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand(href='/directorDash') Director Dashboard
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/usersList') Users
            li.nav-item
              a.nav-link(href='/procurement/procuredProduceList') Procurement
            li.nav-item
              a.nav-link(href='/sales/salesList') Sales
            li.nav-item
              a.nav-link(href='/credit/creditorsList') Credit
            li.nav-item
              a.nav-link(href='/logout') Logout

    .container.mt-4
      h1.mb-4 Users List
      table#userTable.table.table-striped.table-hover.border.border-1
        thead
          tr
            th(scope='col') Name
            th(scope='col') Role
            th(scope='col') Branch
            th(scope='col') Email Address
            th(scope='col') Actions
        tbody
          if users && users.length
            each user in users
              tr
                td #{user.name}
                td #{user.role}
                td #{user.branch}
                td #{user.emailaddress}
                td
                  a.btn.btn-primary.btn-sm.me-2(href="/updateUser/" + user._id) Update
                  form(action="/deleteUser", method="post", style="display:inline")
                    input(type="hidden", name="id", value=user._id)
                    button.btn.btn-danger.btn-sm(type="submit") Delete
          else
            tr
              td(colspan="5", class="text-center") No users found
      
      .mt-4
        a.btn.btn-primary(href="/register") Add New User
        
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz', crossorigin='anonymous')




     