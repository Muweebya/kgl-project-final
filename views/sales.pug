doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Sales Page
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet')
h1 Sales
.container
  form#sales-form(action='sales/addSale' method='post')
    .mb-3
      label.form-label(for='produceName') Produce Name
      input#produceName.form-control(type='text' required='' name='producename')
    .mb-3
      label.form-label(for='produceType') Buyer&apos;s Name
      input.form-control(type='text' id="buyer'sName" required='' name='buyersname')
    .mb-3
      label.form-label(for='dateTime') Date &amp; Time
      input#dateTime.form-control(type='datetime-local' required='' name='dateandtime')
    .mb-3
      label.form-label(for='tonnage') Tonnage (in kgs)
      input#tonnage.form-control(type='number' min='1' required='' name=tonnage)
    .mb-3
      label.form-label(for='cost') Amount Paid (in UgX)
      input#cost.form-control(type='number' min='1' required='' name='amountpaid')
    .mb-3
      label.form-label(for='dealerName') Sales Agent&apos;s Name
      input#salesAgentName.form-control(type='text' required='' name='salesagent')
    .mb-3
      label.form-label(for='paymentMethod') Payment Method
      input#paymentMethod.form-control(type='text' required='' name='paymentmethod')
    button.btn.btn-primary(type='submit') Submit
  h1 Sales List
  table#procuredTable.table.table-striped.table-hover.border.1
    thead
      tr
        th(scope='col') Produce Name
        th(scope='col') Buyer&apos;s Name
        th(scope='col') Date &amp; Time
        th(scope='col') Tonnage(kgs)
        th(scope='col') Amount Paid (UgX)
        th(scope='col') Sales Agent&apos;s Name
        th(scope='col') Payment Method
    tbody
script(src='sales.js')