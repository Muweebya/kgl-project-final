doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Sales List
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
h1 Sold Produce
table#procuredTable.table.table-striped.table-hover.border.1
  thead
    tr
      th(scope='col') Produce Name
      th(scope='col') Buyer&apos;s Name
      th(scope='col') Date &amp; Time
      th(scope='col') Tonnage(kgs)
      th(scope='col') Amount Paid (UgX)
      th(scope='col') Sales Agent&apos;s Name
      th(scope='col') Payment Method
  tbody
   if sales.length 
     each sale in sales 
     tr
      td#{sale.producename}
      td#{sale.buyersname}
      td#{sale.dateandtime}
      td#{sale.tonnage}
      td#{sale.amountpaid}
      td#{sale.paymentmethod}

